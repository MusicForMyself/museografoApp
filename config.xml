<?xml version='1.0' encoding='utf-8'?>
<widget id="com.museografo.app" version="1.4.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Museografo</name>
    <description>
        Muse√≥grafo Agenda Cultural, los mejores eventos cerca de ti
    </description>
    <author email="john@pixel-muffin.com" href="http://johnfalcon.me">
       John Falcon
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="splashscreen" value="splash" />
    <preference name="splash-screen-duration" value="5000" /> 
</widget>
